{
  "lerna": "0.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "createRelease": "github",
      "message": "internal: publish",
      "types": [
        { "type": "feat", "section": "🚀 Features" },
        { "type": "enhance", "section": "💅 Enhancement" },
        { "type": "fix", "section": "🐛 Bug Fix" },
        { "type": "pkg", "section": "📦 Package" },
        { "type": "internal", "section": "🏠 Internal" },
        { "type": "docs", "section": "📝 Documentation" }
      ]
    }
  },
  "changelog": {
    "repo": "ntucker/anansi",
    "labels": {
      "tag: feature": ":rocket: New Feature",
      "tag: breaking": ":boom: Breaking Change",
      "tag: fix": ":bug: Bug Fix",
      "tag: enhance": ":nail_care: Enhancement",
      "tag: docs": ":memo: Documentation",
      "tag: internal": ":house: Internal",
      "tag: pkg": ":package: Package"
    },
    "cacheDir": ".changelog"
  }
}
