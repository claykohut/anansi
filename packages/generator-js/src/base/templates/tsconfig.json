{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./<%= rootPath %>",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["<%= rootPath %>"],
  "exclude": ["node_modules", "**/*.test.ts*"]
}
